############################################################
# htxgo.net / www.htxgo.net
# Stable config: ACME on HTTP + full HTTPS
############################################################

server {
    listen 80;
    listen [::]:80;
    server_name htxgo.net www.htxgo.net;

    access_log /var/log/nginx/htxgo.net.access.log;
    error_log  /var/log/nginx/htxgo.net.error.log;

    # Webroot for certbot --webroot
    root /var/www/letsencrypt;

    # Must stay reachable on HTTP for Let's Encrypt HTTP-01
    location ^~ /.well-known/acme-challenge/ {
        default_type "text/plain";
        allow all;
        try_files $uri =404;
    }

    # All normal traffic -> HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name htxgo.net www.htxgo.net;

    access_log /var/log/nginx/htxgo.net.ssl.access.log;
    error_log  /var/log/nginx/htxgo.net.ssl.error.log;

    ssl_certificate     /etc/letsencrypt/live/htxgo.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/htxgo.net/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers off;
    ssl_session_timeout 1d;

    root /var/www/htxgo;
    index index.html;

    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
        default_type "text/plain";
        allow all;
        try_files $uri =404;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}
